<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_lightest"
    android:padding="24dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Welcome to\nEgg Hunter"
        android:textColor="@color/blue_text_primary"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:elevation="4dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/instructionsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.95"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="12dp"
            android:padding="24dp"
            android:text="1. Point your camera at the ground\n2. Look for Easter eggs\n3. Tap to collect them\n4. Find all the eggs and complete the tour!"
            android:textColor="@color/blue_text_primary"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startArTourButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionsCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Start AR Tour"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:paddingHorizontal="40dp"
        android:paddingVertical="16dp"
        android:textColor="@color/blue_text_primary"
        app:backgroundTint="@color/blue_light"
        app:cornerRadius="28dp"
        app:elevation="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/collectibles_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startArTourButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="View Collectibles"
        android:textColor="@color/blue_text_primary"
        app:backgroundTint="@color/blue_light"
        app:cornerRadius="28dp"
        app:elevation="8dp" />

</RelativeLayout>
